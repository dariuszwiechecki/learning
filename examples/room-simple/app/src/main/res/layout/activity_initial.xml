<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nomrasco.roomsimple.features.InitialActivity">

    <Button
        android:id="@+id/btn_simple_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Action 1"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="30dp" />

    <Button
        android:id="@+id/btn_another_test"
        android:layout_below="@id/btn_simple_test"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Listen Users"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="114dp" />

    <Button
        android:id="@+id/btn_another_test_touch"
        android:layout_below="@id/btn_simple_test"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Touch Users"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="114dp" />

    <Button
        android:id="@+id/btn_another_test_real_touch"
        android:layout_below="@id/btn_simple_test"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_toRightOf="@+id/btn_another_test"
        android:layout_toLeftOf="@+id/btn_another_test_touch"
        android:text="!!"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="114dp" />

    <Button
        android:id="@+id/btn_quick_mini_users"
        android:layout_below="@id/btn_another_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get all with limited details"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="114dp" />

    <Button
        android:id="@+id/btn_get_single_with_pets"
        android:layout_below="@id/btn_quick_mini_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get user 2 with all pets"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="114dp" />
</RelativeLayout>
